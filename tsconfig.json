{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,

        "types": ["node"],

        "outDir": "./dist/",
        "declaration": true,
        "declarationDir": "./dist/",

        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node"
    },
    "include": ["src/*", "src/*/*"],
    "exclude": ["node_modules", "./dist"]
}